<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="article"
            type="com.example.newsapp.model.Article" />
    </data>

    <!--set style in theme-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            style="@style/LatestCardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_x"
            android:adjustViewBounds="true">

            <!--set textview style in theme-->

                <ImageView
                    android:id="@+id/ivNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{article.urlToImage}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_x"
                        android:textAppearance="@style/LatestTextViewStyle"
                        android:text="@{article.author}" />

                    <TextView
                        android:id="@+id/tvPublish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:textColor="@color/black"
                        android:textAppearance="@style/LatestTextViewStyle"
                        android:text="@{article.title}" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:textAppearance="@style/LatestTextViewStyle"
                            android:text="@{article.content}" />

                    </FrameLayout>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

</layout>